package test;

public class test {
	public static void main(String args[]) {
		   int arr[] = {3, 29, 38, 12, 57, 74, 40, 85, 61};
		   int maxNumber = 0;
		   int maxNumberIndex = 0;
		   
		   for(int i = 0; i < 9; i++) {
			   int tmp = arr[i];
			   if(tmp > maxNumber) {
				   maxNumber = arr[i];
				   maxNumberIndex = i + 1;
			   }
		   }
		   System.out.println(maxNumber);
		   System.out.println(maxNumberIndex);
	}
   
}